<?xml version='1.0' encoding='utf-8'?>
<widget id="com.elfs.das.album" version="1.0.0" xmlns:gap="http://www.w3.org/ns/widgets">
    <name>Das Album</name>
    <description>
        Photo Album using php and js
    </description>
    <author email="serban@elfs.ro" href="http://www.elfs.ro">
        Das Album Team
    </author>    
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <icon src="images/icon.png" />
    <icon gap:density="ldpi" gap:platform="android" src="phoneGap/res/icon/android/icon-36-ldpi.png" />
    <icon gap:density="mdpi" gap:platform="android" src="phoneGap/res/icon/android/icon-48-mdpi.png" />
    <icon gap:density="hdpi" gap:platform="android" src="phoneGap/res/icon/android/icon-72-hdpi.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="phoneGap/res/icon/android/icon-96-xhdpi.png" />
    <icon gap:platform="blackberry" src="phoneGap/res/icon/blackberry/icon-80.png" />
    <icon gap:platform="blackberry" gap:state="hover" src="phoneGap/res/icon/blackberry/icon-80.png" />
    <icon gap:platform="ios" height="57" src="phoneGap/res/icon/ios/icon-57.png" width="57" />
    <icon gap:platform="ios" height="72" src="phoneGap/res/icon/ios/icon-72.png" width="72" />
    <icon gap:platform="ios" height="114" src="phoneGap/res/icon/ios/icon-57-2x.png" width="114" />
    <icon gap:platform="ios" height="144" src="phoneGap/res/icon/ios/icon-72-2x.png" width="144" />
    <icon gap:platform="webos" src="phoneGap/res/icon/webos/icon-64.png" />
    <icon gap:platform="winphone" src="phoneGap/res/icon/windows-phone/icon-48.png" />
    <icon gap:platform="winphone" gap:role="background" src="phoneGap/res/icon/windows-phone/icon-173.png" />
    <gap:splash gap:density="ldpi" gap:platform="android" src="phoneGap/res/screen/android/screen-ldpi-portrait.png" />
    <gap:splash gap:density="mdpi" gap:platform="android" src="phoneGap/res/screen/android/screen-mdpi-portrait.png" />
    <gap:splash gap:density="hdpi" gap:platform="android" src="phoneGap/res/screen/android/screen-hdpi-portrait.png" />
    <gap:splash gap:density="xhdpi" gap:platform="android" src="phoneGap/res/screen/android/screen-xhdpi-portrait.png" />
    <gap:splash gap:platform="blackberry" src="phoneGap/res/screen/blackberry/screen-225.png" />
    <gap:splash gap:platform="ios" height="480" src="phoneGap/res/screen/ios/screen-iphone-portrait.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="phoneGap/res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1024" src="phoneGap/res/screen/ios/screen-ipad-portrait.png" width="768" />
    <gap:splash gap:platform="ios" height="768" src="phoneGap/res/screen/ios/screen-ipad-landscape.png" width="1024" />
    <gap:splash gap:platform="winphone" src="phoneGap/res/screen/windows-phone/screen-portrait.jpg" />
    <access origin="http://127.0.0.1*" />
    <gap:plugin name="org.apache.cordova.contacts" version="0.2.13" />
    <gap:plugin name="org.apache.cordova" version="1.2.0"/>
    <gap:plugin name="org.apache.cordova-plugin-file" version="1.2.0"/>
    <feature name="Camera">
    <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
</feature>
</widget>
